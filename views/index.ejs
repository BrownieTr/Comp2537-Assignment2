<%- include("templates/header") %>

<div class="container my-5">
  <% if ( user ) { %>
    <%- include("templates/hello") %>
    
    <div class="d-grid gap-3 col-6 mx-auto">
      <button class="btn btn-primary btn-lg" onclick="window.location.href='/members'">
        Go to Members Area
      </button>
      <button class="btn btn-outline-danger btn-lg" onclick="window.location.href='/logout'">
        Logout
      </button>
    </div>

  <% } else { %>

    <div class="text-center">
      <h2 class="mb-4">Welcome!</h2>
      <p class="lead">Sign up or log in to access exclusive features.</p>
      <div class="d-grid gap-3 col-6 mx-auto">
        <button class="btn btn-success btn-lg" onclick="window.location.href='/signup'">
          Sign Up
        </button>
        <button class="btn btn-outline-primary btn-lg" onclick="window.location.href='/login'">
          Login
        </button>
      </div>
    </div>

  <% } %>
</div>

<%- include("templates/footer") %>
